
@{
    ViewBag.Title = "AjoutProduit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AjoutProduit</h2>

<div>
    <form id="formProduit" name="formProduit" action="" method="post" enctype="multipart/form-data">
        @*enctype est obligatoire pr tt formulaire
            necessitant un echange de fichier entre client et serveur(img,pdf,ect...)*@
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label>CATEGORIE</label>
                <select id="CODE_CATEGORIE" name="CODE_CATEGORIE" class="form-control">
                    <option>CATEGORIE 1</option>
                    <option>CATEGORIE 2</option>
                </select>
            </div>
            <div class="form-group">
                <label>PRODUIT</label>
                <input type="text" id="LIBELLE_PRODUIT" class="form-control" name="LIBELLE_PRODUIT" required />
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label>DESCRIPTION</label>
                <textarea id="DESCRIPTION_PRODUIT" class="form-control" name="DESCRIPTION_PRODUIT"></textarea>
            </div>
            <div class="form-group">
                <label>IMAGE PRODUIT</label>
                <input type="file" id="IMAGE_PRODUIT" class="form-control" name="IMAGE_PRODUIT" />
            </div>
        </div>
    </div>


